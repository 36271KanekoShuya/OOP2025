<Window x:Class="ColorChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorChecker"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Label x:Name="colorArea" Margin="10" Background="Black"/>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <!--赤色-->
            <TextBlock Grid.Column="0" Grid.Row="0" Text="R" FontSize="20"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="redColorSlider" Grid.Column="1" Grid.Row="0" Maximum="255" VerticalAlignment="Center"
                    ValueChanged="ColorSlider_ValueChanged" IsSnapToTickEnabled="True" />
            <TextBox x:Name="redColorText" Grid.Column="2" Grid.Row="0" FontSize="17"
                     VerticalAlignment="Center" TextAlignment="Right"
                     Text="{Binding ElementName=redColorSlider, Path=Value, Mode=TwoWay}"/>
            <!--緑色-->
            <TextBlock Grid.Column="0"  Grid.Row="1" Text="G" FontSize="20"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="greenColorSlider" Grid.Column="1" Grid.Row="1" Maximum="255" VerticalAlignment="Center"
                    ValueChanged="ColorSlider_ValueChanged" IsSnapToTickEnabled="True"/>
            <TextBox x:Name="greenColorText" Grid.Column="2" Grid.Row="1" FontSize="17"
                     VerticalAlignment="Center" TextAlignment="Right"
                     Text="{Binding ElementName=greenColorSlider,Path=Value,Mode=TwoWay}"/>
            <!--青色-->
            <TextBlock Grid.Column="0"  Grid.Row="2" Text="B" FontSize="20"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="blueColorSlider" Grid.Column="1" Grid.Row="2" Maximum="255" VerticalAlignment="Center"
                    ValueChanged="ColorSlider_ValueChanged" IsSnapToTickEnabled="True"/>
            <TextBox x:Name="blueColorText" Grid.Column="2" Grid.Row="2" FontSize="17"
                     VerticalAlignment="Center" TextAlignment="Right"
                     Text="{Binding ElementName=blueColorSlider,Path=Value,Mode=TwoWay}"/>
            <!--コンボボックス-->
            <ComboBox x:Name="colorSelectComboBox" ItemsSource="{Binding}" SelectedValue="{Binding Color}" Grid.Row="3" VerticalAlignment="Top" Grid.ColumnSpan="3" Margin="33,13,33,0" SelectionChanged="colorSelectComboBox_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Border Width="20" Height="Auto" Margin="5,0" BorderThickness="1" BorderBrush="Black"  >
                                <Border.Background>
                                    <SolidColorBrush Color="{Binding Color}"/>
                                </Border.Background>
                            </Border>
                            <TextBlock Text="{Binding Name}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>


        </Grid>
        <Grid Grid.Column ="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <Button x:Name="stockButton" Content="STOCK" Margin="5,0,60,0" VerticalAlignment="Center" Click="stockButton_Click" Height="25"/>
            <ListBox x:Name="stockList" Grid.Row="1" Margin="5" FontSize="15" SelectionChanged="stockList_SelectionChanged" ItemsSource="{Binding Items}"/>
            <Button x:Name="deleteButton" Content="DELETE" HorizontalAlignment="Left" Margin="147,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="0.517,0.46" Height="30" Click="deleteButton_Click"/>
        </Grid>
    </Grid>
</Window>
