<Window x:Class="PrismObservesSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrismObservesSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="450">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--入力1-->
        <TextBox Grid.Row="0" Grid.Column="0" Margin="5" Height="35" FontSize="20"
                 Text="{Binding Input1,UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Grid.Row="0" Grid.Column="1" Margin="5"
                   Text="+" TextAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
        <!--入力2-->
        <TextBox Grid.Row="0" Grid.Column="2" Margin="5" Height="35" FontSize="20"
                 Text="{Binding Input2,UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Grid.Row="0" Grid.Column="3" Margin="5"
           Text="=" TextAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
        <!--計算結果-->
        <TextBox Grid.Row="0" Grid.Column="4" Margin="5" Height="35" FontSize="20"
                 Text="{Binding Result,UpdateSourceTrigger=PropertyChanged}"/>
        <!--計算ボタン-->
        <Button Grid.Row="1" Grid.Column="4" Margin="10" Height="40" Content="計算"
                Command="{Binding SumCommand,UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Window>
