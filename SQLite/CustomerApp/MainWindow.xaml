<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp"
        mc:Ignorable="d"
        Title="顧客管理アプリ" Width="650" Height="500" >
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="Gray"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="2*"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="名前：" Margin="2,3,0,5" FontSize="15" VerticalAlignment="Top"/>
            <TextBox Grid.Row="0" x:Name="NameTextBox" Margin="50,5,0,5" FontSize="17" VerticalAlignment="Top"/>
            <Label Grid.Row="0" Content=" TEL：" Margin="2,6,0,5" FontSize="15" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" x:Name="PhoneTextBox" Margin="50,5,0,5" FontSize="17" VerticalAlignment="Center"/>
            <Label Grid.Row="0" Content="住所：" Margin="2,0,0,2" FontSize="15" VerticalAlignment="Bottom"/>
            <TextBox Grid.Row="0" x:Name="AddressTextBox" Margin="50,5,0,5" FontSize="17" VerticalAlignment="Bottom"/>

            <Button Grid.Row="1" Content="画像" x:Name="PictureButton" Margin="5,0,0,160" Width="65" Height="45"
                    Click="PictureButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="17"
                    Background="White"/>
            <Border Grid.Row="1" Margin="5,50,0,0" BorderBrush="Black" BorderThickness="1">
                <Image x:Name="PictureBox" Stretch="Fill"/>
            </Border>

            <Button Grid.Row="2" Content="クリア" x:Name="ClearButton"  Margin="10,10,0,0" Width="70" Height="40"
                    Click="ClearButton_Click" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="17"
                    Background="LightPink"/>
            <Button Grid.Row="2" Content="保存" x:Name="SaveButton"  Margin="0,10,10,0" Width="70" Height="40"
                    Click="SaveButton_Click" VerticalAlignment="Top" HorizontalAlignment="Right" FontSize="17"
                    Background="White"/>
            <Label Grid.Row="2" Content="" x:Name="MessageLabel" Margin="5" VerticalAlignment="Bottom" FontSize="17" Background="LightGray"/>

        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="7*"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label Grid.Column="1" Content="検索：" Margin="0,7,3,3" FontSize="15"/>
            <TextBox Grid.Column="1" x:Name="SearchTextBox" Margin="50,10,10,10" VerticalAlignment="Top" FontSize="17"
                     TextChanged="SearchTextBox_TextChanged"/>
            <ListView x:Name="CustomerListView" Margin="5,40,5,5" SelectionChanged="CustomerListView_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Source="{Binding Picture}" VerticalAlignment="Center" Stretch="Uniform" Width="80" Height="80" Margin="5,0"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Top" Orientation="Vertical" >
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <TextBlock Text="名前: " FontWeight="Bold" VerticalAlignment="Center" Margin="0"/>
                                    <TextBlock Text="{Binding Name}" FontSize="16" VerticalAlignment="Center" Margin="0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <TextBlock Text="TEL: " FontWeight="Bold" VerticalAlignment="Center" Margin="0"/>
                                    <TextBlock Text="{Binding Phone}" Foreground="Blue" FontSize="16" VerticalAlignment="Center" Margin="0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <TextBlock Text="住所: " FontWeight="Bold" VerticalAlignment="Center" Margin="0"/>
                                    <TextBlock Text="{Binding Address}" Foreground="Green" FontSize="16" VerticalAlignment="Center" Margin="0"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Grid.Row="1" Content="削除" x:Name="DeleteButton" Margin="0,5,10,5" Width="70" Click="DeleteButton_Click" 
              Background="Red" Foreground="White" HorizontalAlignment="Right" FontSize="25"/>
            <Button Grid.Row="1" Content="更新" x:Name="UpdateButton" Margin="0,5,100,5" Width="70" Click="UpdateButton_Click"
                     HorizontalAlignment="Right" FontSize="17" Background="White"/>
        </Grid>

    </Grid>
</Window>
