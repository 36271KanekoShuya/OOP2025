<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp"
        mc:Ignorable="d"
        Title="顧客管理アプリ" Width="600" Height="450" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="2*"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="名前：" Margin="2,3,0,5" FontSize="15" VerticalAlignment="Top"/>
            <TextBox Grid.Row="0" x:Name="NameTextBox" Margin="50,5,0,5" FontSize="17" VerticalAlignment="Top"/>
            <Label Grid.Row="0" Content=" TEL：" Margin="2,6,0,5" FontSize="15" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" x:Name="PhoneTextBox" Margin="50,5,0,5" FontSize="17" VerticalAlignment="Center"/>
            <Label Grid.Row="0" Content="住所：" Margin="2,0,0,2" FontSize="15" VerticalAlignment="Bottom"/>
            <TextBox Grid.Row="0" x:Name="AddressTextBox" Margin="50,5,0,5" FontSize="17" VerticalAlignment="Bottom"/>
            
            <Button Grid.Row="1" Content="画像" x:Name="PictureButton" Margin="5,5,0,170" Width="65"
                    Click="PictureButton_Click" HorizontalAlignment="Left" FontSize="17"/>
            <Border Grid.Row="1" Margin="5,50,0,0" BorderBrush="Black" BorderThickness="1">
                <Image x:Name="PictureBox" Stretch="Fill"/>
            </Border>
            
            <Button Grid.Row="2" Content="保存" x:Name="SaveButton"  Margin="0,10,10,0" Width="70" Height="40"
                    Click="SaveButton_Click" VerticalAlignment="Top" HorizontalAlignment="Right" FontSize="17"/>
            <Label Grid.Row="2" Content="" x:Name="MessageLabel" Margin="5" VerticalAlignment="Bottom"/>

        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="7*"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBox Grid.Column="1" x:Name="SearchTextBox" Margin="10" VerticalAlignment="Top" FontSize="15"/>
            <ListView Grid.Column="1" x:Name="CustomerListView" Margin="5,40,5,5" SelectionChanged="CustomerListView_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Image Source="{Binding Picture}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Name}" FontSize="20"/>
                            <TextBlock Text="{Binding Phone}" Foreground="Blue"/>
                            <TextBlock Text="{Binding Address}" Foreground="Green"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label Grid.Row="1" Content="未選択です" Margin="10,5,180,5" FontSize="15" VerticalAlignment="Center"/>
            <Button Grid.Row="1" Content="削除" x:Name="DeleteButton" Margin="0,5,10,5" Width="70" Click="DeleteButton_Click" 
              Background="Red" Foreground="White" HorizontalAlignment="Right" FontSize="17"/>
            <Button Grid.Row="1" Content="更新" x:Name="UpdateButton" Margin="0,5,100,5" Width="70" Click="UpdateButton_Click"
                     HorizontalAlignment="Right" FontSize="17"/>
        </Grid>

    </Grid>
</Window>
